{
  "name": "habitforge-backend-ai",
  "version": "0.0.1",
  "description": "HabitForge AI is a web application that helps users build and track daily habits with AI-generated personalized suggestions",
  "author": "Mod Narayan Singh",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start:ai": "nest start ai --watch",
    "start:ai:debug": "nest start ai --debug --watch",
    "start:ai:prod": "node dist/apps/ai/main",
    "start:auth": "nest start auth --watch",
    "start:auth:debug": "nest start auth --debug --watch",
    "start:auth:prod": "node dist/apps/auth/main",
    "start:habits": "nest start habits --watch",
    "start:habits:debug": "nest start habits --debug --watch",
    "start:habits:prod": "node dist/apps/habits/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/habitforge-backend-ai/apps/generate/habitforge-backend-ai/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/platform-fastify": "^11.1.9",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@habitforge/database(|/.*)$": "<rootDir>/libs/database/src/$1",
      "^@habitforge/kafka(|/.*)$": "<rootDir>/libs/kafka/src/$1",
      "^@habitforge/logger(|/.*)$": "<rootDir>/libs/logger/src/$1",
      "^@habitforge/middleware(|/.*)$": "<rootDir>/libs/middleware/src/$1"
    }
  }
}
